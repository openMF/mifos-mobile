<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="?attr/listPreferredItemHeight"
             android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/client_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_accountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/account_number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_loanProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/loan_product_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_loan_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_loanProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/loan_purpose"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_loan_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/principal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_principal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_principalDisbursed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/principal_disbursed"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_principal_disbursed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_annualInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/annual_interest_rate"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_annual_interest_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_interestCharged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/interest_charged"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_interest_charged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/row_padding_left"
        android:paddingTop="@dimen/table_row_padding_top">

        <TextView
            android:id="@+id/tv_interestPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/interest_paid"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_interest_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/loan_accounts_text_view_margin_left"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
    </TableRow>

</TableLayout>