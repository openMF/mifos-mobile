<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:weightSum="3">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply \nloan"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:padding="4dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="@drawable/circular_background_btn"
                android:id="@+id/btn_apply_for_loan"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan \nRepayment"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="@drawable/circular_background_btn"
                android:id="@+id/btn_loan_repayment"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick \nTransfer"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="@drawable/circular_background_btn"
                android:id="@+id/btn_quick_transfer"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:id="@+id/cv_saving_account"
            android:layout_margin="@dimen/default_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/savings_account"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/tv_saving_total_amount"/>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pie_chart_height"
                    android:layout_marginTop="@dimen/default_margin"
                    android:id="@+id/pc_savings_chart"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/cv_loan_account"
            android:layout_margin="@dimen/default_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/loan_account"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/tv_loan_total_amount"/>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pie_chart_height"
                    android:layout_marginTop="@dimen/default_margin"
                    android:id="@+id/pc_loan_chart"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:id="@+id/cv_share_account"
            android:layout_margin="@dimen/default_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/share_account"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textSize="@dimen/text_small"
                        android:id="@+id/tv_shares_approved"/>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pie_chart_height"
                    android:layout_marginTop="@dimen/default_margin"
                    android:id="@+id/pc_shares_chart"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>