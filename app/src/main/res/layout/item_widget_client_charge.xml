<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:layout_marginTop="@dimen/default_margin"
    android:paddingEnd="@dimen/row_padding_right"
    android:paddingLeft="@dimen/row_padding_left"
    android:paddingRight="@dimen/row_padding_right"
    android:paddingStart="@dimen/row_padding_left">

    <ImageView
        android:id="@+id/circle_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/accent"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/row_padding_left"
        android:paddingStart="@dimen/row_padding_left">

        <TextView
            android:id="@+id/tv_charge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/medium_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/tv_charge_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/small_text"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_small"/>

    </LinearLayout>
</LinearLayout>