<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:gravity="center_vertical|bottom"
    android:layout_height="@dimen/nav_drawer_header_height"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/iv_user_image"
        android:layout_height="@dimen/nav_drawer_header_img"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_width="@dimen/nav_drawer_header_img"
        app:srcCompat="@drawable/ic_person_black_24dp"/>

    <org.mifos.mobile.utils.CircularImageView
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/iv_circular_user_image"
        android:layout_height="@dimen/nav_drawer_header_img"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_width="@dimen/nav_drawer_header_img"
        android:visibility="gone"
        app:border="true"
        app:border_width="@dimen/app_border_width"
        app:srcCompat="@drawable/ic_person_black_24dp"/>

    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_user_name"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_width="wrap_content"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"/>

</LinearLayout>
