<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPaddingLarge">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_base_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium"
        app:hintAnimationEnabled="false"
        app:startIconDrawable="@drawable/ic_wrapped_lock_black_24dp">

        <EditText
            android:id="@+id/et_base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_base_url"
            android:nextFocusDown="@id/et_tenant" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium"
        app:hintAnimationEnabled="false"
        app:startIconDrawable="@drawable/ic_lock_black_24dp">

        <EditText
            android:id="@+id/et_tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_tenant" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
