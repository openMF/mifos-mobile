<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/listPreferredItemHeight"
            android:orientation="vertical"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/listPreferredItemHeight"
                android:orientation="horizontal">
                <org.mifos.selfserviceapp.utils.CircularImageView
                    android:id="@+id/iv_status_indicator"
                    android:layout_width="@dimen/account_status_width"
                    android:layout_height="@dimen/account_status_height"
                    android:layout_gravity="center_vertical"
                    android:src="@color/light_red"
                    android:layout_marginEnd="@dimen/default_margin"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/row_padding_left">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_clientSavingAccountNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_weight="1"
                            android:text="@string/medium_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium"/>
                        <TextView
                            android:id="@+id/tv_last_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="@string/small_text"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_small"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_savingAccountProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/small_text"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_account_detail"
                android:visibility="gone"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/balance"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_small"/>
                    <TextView
                        android:id="@+id/tv_account_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium"
                        android:layout_margin="4dp" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>