<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ncv_customer_details"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_user_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:padding="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:id="@+id/iv_profile"
            android:layout_marginTop="20dp"
            app:civ_border_color="@color/gray_bright"
            app:civ_border_width="2dp"
            android:src="@drawable/sharad"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:gravity="bottom"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_32dp"
            android:layout_width="150dp"
            app:layout_collapseMode="parallax">

            <ImageView
                android:id="@+id/iv_text_drawable"
                android:layout_height="84dp"
                android:layout_width="84dp"
                android:visibility="gone"/>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/ic_edit"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_username"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/username"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_username"
            android:layout_toEndOf="@+id/ic_username"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/textUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_below="@+id/textUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLength="25"
                android:textSize="18sp"
                android:hint="Username"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_account_no"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_username_grey"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_account_no"
            android:layout_toEndOf="@+id/ic_account_no"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/textAccountNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_account_number"
                android:layout_below="@+id/textAccountNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:hint="@string/account_number"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_date"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            app:srcCompat="@drawable/timetable"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_date"
            android:layout_toEndOf="@+id/ic_date"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/textActiDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activation_date"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_activation_date"
                android:layout_below="@+id/textActiDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="@string/activation_date"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_office"
            android:layout_width="33dp"
            android:layout_height="@dimen/layout_padding_30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/company"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_office"
            android:layout_toEndOf="@+id/ic_office"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/textOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/office_name"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_office_name"
                android:layout_below="@+id/textOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:hint="@string/office_name"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_groups"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/group"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_groups"
            android:layout_toEndOf="@+id/ic_groups"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/textGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/groups"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_groups"
                android:layout_below="@+id/textGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:hint="@string/groups"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_client"
            android:layout_width="33dp"
            android:layout_height="@dimen/layout_padding_30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/client_type"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_client"
            android:layout_toEndOf="@+id/ic_client"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/textClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/client_type"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_client_type"
                android:layout_below="@+id/textClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:hint="@string/client_type"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border_bottom"
        >

        <ImageView
            android:id="@+id/ic_client_classify"
            android:layout_width="33dp"
            android:layout_height="@dimen/layout_padding_30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/client_classification"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_client_classify"
            android:layout_toEndOf="@+id/ic_client_classify"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/textClientClassify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/client_classification"
                android:textSize="20sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_client_classification"
                android:layout_below="@+id/textClientClassify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:hint="@string/client_classification"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_dark"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/textDetails"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:text="@string/user_details"
            android:textSize="20sp"
            android:textColor="@color/primary"/>
        <TextView
            android:layout_below="@+id/textDetails"
            android:drawableLeft="@drawable/ic_phone_wrapper"
            android:drawablePadding="@dimen/layout_padding_8dp"
            android:drawableStart="@drawable/ic_phone_wrapper"
            android:gravity="center"
            android:id="@+id/tv_phone_number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/layout_padding_8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@string/medium_text"/>
        <TextView
            android:layout_below="@+id/tv_phone_number"
            android:drawableLeft="@drawable/ic_cake_wrapper"
            android:drawablePadding="@dimen/layout_padding_8dp"
            android:drawableStart="@drawable/ic_cake_wrapper"
            android:gravity="center"
            android:id="@+id/tv_dob"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/layout_padding_8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@string/medium_text"/>
        <TextView
            android:layout_below="@+id/tv_dob"
            android:drawableLeft="@drawable/ic_beneficiary_wrapper"
            android:drawablePadding="@dimen/layout_padding_8dp"
            android:drawableStart="@drawable/ic_beneficiary_wrapper"
            android:gravity="center"
            android:id="@+id/tv_gender"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/layout_padding_8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="@string/medium_text"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_password"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="match_parent"
        android:text="@string/change_password"/>

</LinearLayout>
    </androidx.core.widget.NestedScrollView>
</merge>